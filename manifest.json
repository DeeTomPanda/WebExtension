{
    "manifest_version": 3,
    "name": "CO2 Emissions",
    "description": "Displays current CO2 emissions globally and provided resources!",
    "version": "3.2",
    "permissions": [
        "scripting",
        "activeTab",
        "debugger",
        "nativeMessaging",
        "tabs"
    ],
    "host_permissions": [
        "https://*/*",
        "http://*/*"
    ],
    "action": {
        "default_popup": "popup.html",
        "default_icon": "images/ext-icon.png"
    },
    
    "devtools_page": "devtools.html",
    "content_scripts": [
        {
            "js": [
                "scripts/content.js"
            ],
            "matches": [ "<all_urls>" ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }

}
